<div class="row">
	<div class="col-xs-12 col-md-12">
		<%= form_for @room, :url => {:action => "create"}, :method => "post"  do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-12">
					<%= f.label :name %>
				</div>
				<div class="col-sm-12">	
					<%= f.text_field :name, class: "	form-control", placeholder: "Name of Room", autofocus: 	true %>
				</div>
			</div>
				<div class="form-group">
					<div class="control-label col-sm-2">
						<%= f.label :location %> <br/ >
					</div>
					<div class="col-sm-12 col-md-12">
						<%= f.text_area :location, class: "form-control", rows: 10, placeholder: "Location of Room" %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">				
						<%= f.submit "Criar Sala", class: 'btn btn-primary btn-lg' %>
					</div>
				</div>
			<% end %>
	</div>
</div>