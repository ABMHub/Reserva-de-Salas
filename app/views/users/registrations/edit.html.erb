<div>
  <div style="text-align: center;">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: update_user_registration_path(current_user.id), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <label for="inputEmail">Email</label>
      <div class="field">
        <%= f.email_field :email %>
      </div>
    </div>
      
    <div class="form-group">
      <label for="inputUsername">Usu√°rio</label>
      <div class="field">
        <%= f.text_field :username, autocomplete: true %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputRegistration">Registro</label>
      <div class="field">
        <%= f.text_field :registration, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputCourse">Curso</label>    
      <div class="field">
        <%= f.text_field :course, autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :new_password %> <i>(leave blank if you dont want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :new_password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions" style="margin-top: 10px">
      <%= link_to raw("<i class=\"fa fa-fw fa-arrow-left\">Back</i>"), :back, style: "float: left;" %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger", style: "float: right; margin-right: 5px;"%>
      <%= f.submit "Update", class: "btn btn-success", style: "float: right; margin-right: 5px;"%>
    </div>
  <% end %>
</div>