<h1>Painel de visualização de Sala</h1>

<%= link_to "Histórico", {:filter => "history"}, class: "button"%>
<%= link_to "Agendamentos", {:filter => "appointments"}, class: "button"%>

<div class="letra">
    <% @appointments.each do |item| %>
        <div>
            <tr>
                <td><%= item.appointment_date.strftime("%d/%m/%Y") %> </td>
                <td><%= item.start_time.strftime("%T") %> </td>
            </tr>
        </div>
    <% end %>
</div>
